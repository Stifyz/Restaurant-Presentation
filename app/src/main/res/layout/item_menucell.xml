<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/horizontal_margin"
    android:layout_marginRight="@dimen/horizontal_margin"
    android:paddingTop="5dp"
    android:background="@color/nodesBackground"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/underlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/cellName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:text="Name"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:gravity=""/>

        <TextView
            android:id="@+id/cellPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:text="price"
            android:layout_marginLeft="5dp"
            android:textColor="@color/SecondaryFontColor"
            android:layout_below="@id/cellName"/>

        <TextView
            android:id="@+id/cellDescribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:text="describe"
            android:paddingBottom="10dp"
            android:textColor="@color/SecondaryFontColor"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/cellPrice"/>

        <ImageButton
            android:id="@+id/cellButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/add_button"
            android:background="@color/nodesBackground"
            android:onClick="toast" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/underlayout"
        android:background="@color/appBackground"/>

</RelativeLayout>